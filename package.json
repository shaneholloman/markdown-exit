{
  "name": "@markdown-exit/monorepo",
  "type": "module",
  "version": "1.0.0-beta.7",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -F markdown-exit run dev",
    "build": "pnpm -F markdown-exit run build",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "prepack": "pnpm lint && pnpm test --run && pnpm build && pnpm typecheck",
    "release": "pnpm prepack && bumpp -r && pnpm -r publish",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:preview": "pnpm -C docs run preview",
    "docs:generate": "pnpm -C docs run generate"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@codspeed/vitest-plugin": "catalog:tests",
    "@types/node": "catalog:types",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "shiki": "catalog:tests",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:tests"
  }
}
